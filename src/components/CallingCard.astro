---
import LinkedIn from './LinkedIn.astro';
import Nav from './Nav.astro';
---

<div class:list={['calling-card']}>
  <div class="photo-blob" transition:name="photo-blob">
    <div class="photo-blob__background-blob-1"></div>
    <div class="photo-blob__background-blob-2"></div>
    <div class="photo-blob__main-blob"></div>
  </div>
  <div class="calling-card__info" transition:name="header">
    <h1>Jonathan Baines</h1>
    <h2>Front End Developer</h2>
    <Nav/>
    <LinkedIn />
  </div>
</div>


<style lang="scss">
  h1, h2 {
    font-family: var(--heading-font);
    margin: 0;
  }

  h2 {
    font-size: 1.05rem;
  }

  .calling-card {

    display: flex;
    gap: 30px;
    align-items: center;
    overflow-y: hidden;
    padding: 0 30px;
    width: fit-content;
    transition: 0.2s linear all;

    &:not(.calling-card--compact) {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%,-50%);
      height: 100%;
    }

    @media screen and (max-width: 600px) {
      flex-direction: column;
      justify-content: center;
      text-align: center;
    }
    &--compact {
      margin: 0 auto;
    }
  } 

  .calling-card__info {
    position: relative;
    z-index: 1;
    display: flex;
    flex-direction: column;
    gap: 30px;
  }

  .photo-blob {
    position: relative;
    width: 200px;
    height: 200px;
    animation: floatIn 3s alternate ease-in-out infinite;
    transition: 2s linear opacity;
    opacity: 1;

    @starting-style {
      opacity: 0;
    }
    
    &__background-blob-1 {
      position: absolute;
      width: 110px;
      height: 110px;
      background-color: #022e87;
      top: -10px;
      left: -30px;
      border-radius: 55% 80% 65% 89% / 80% 65% 90% 70%;
      animation: floatEndlessley 5s alternate infinite ease-in-out;
      overflow: hidden;
    }

    &__background-blob-2 {
      position: absolute;
      width: 110px;
      height: 110px;
      background-color: #022e87;
      bottom: 0px;
      right: -10px;
      border-radius: 55% 80% 65% 89% / 80% 65% 90% 70%;
      animation: floatEndlessley 5s alternate infinite ease-in-out;
      overflow: hidden;
    }

    &__main-blob {
      position: absolute;
      width: 170px;
      height: 170px;
      top: 0;
      left: 0;
      inset: 0;
      background: black;
      background-attachment: fixed;
      border-radius: 55% 80% 65% 89% / 80% 65% 90% 70%;
      animation: rotateAnimation 30s infinite ease-in-out;
      overflow: hidden;
      align-content: center;
      justify-content: center;
      
      &:is(.calling-card--compact .photo-blob__main-blob) {
        width: 90px;
        height: 90px;
      }
      
      &::before {
        content: ' ';
        background-image: url('../assets/photo.jpg');
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
        background-repeat: no-repeat;
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        animation: counterRotateAnimation 30s infinite ease-in-out;
      }
    }
  }


  @keyframes rotateAnimation {
    0% {
      transform: rotate(0deg);
    }
    50% {
      transform: rotate(180deg);
    }
    100% {
      transform:  rotate(360deg);
    }
  }

  @keyframes counterRotateAnimation {
    0% {
      transform: rotate(360deg) scale(1.4);
    }
    50% {
      transform: rotate(180deg) scale(1.4);
    }
    100% {
      transform: rotate(0deg) scale(1.4);
    }
  }

  @keyframes floatIn {
    0% {
      transform: translateY(5px);
    }
    100% {
      transform: translateY(-5px);
    }
  }

  @keyframes floatEndlessley {
    0% {
      transform: translateY(0px) rotate(0deg);
    }
    100% {
      transform: translateY(-30px) rotate(40deg);
    }
  }
</style>