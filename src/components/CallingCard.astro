---
import Image from 'astro/components/Image.astro';
import photo from '../assets/photo.jpg';

import blob from '../assets/blob.svg';

import LinkedIn from './LinkedIn.astro';
---

<div class="calling-card">
  <div class="photo-blob">
    <div class="photo-blob__background-blob-1"></div>
    <div class="photo-blob__background-blob-2"></div>
    <div class="photo-blob__main-blob"></div>
  </div>
  <div class="calling-card__info">
    <h1>Jonathan Baines</h1>
    <LinkedIn />
  </div>
</div>


<style lang="scss">
  h1 {
    font-family: var(--heading-font);
  }

  .calling-card {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    display: flex;
    gap: 30px;
    height: 100%;
    align-items: center;
    overflow-y: hidden;
    padding: 0 30px;

    @media screen and (max-width: 600px) {
      flex-direction: column;
      justify-content: center;
      text-align: center;
    }
  } 

  .calling-card__info {
    position: relative;
    z-index: 1;
  }

  .photo-blob {
    position: relative;
    width: 200px;
    height: 200px;
    animation: floatIn 3s alternate ease-in-out infinite;
    transition: 2s linear opacity;
    opacity: 1;

    @starting-style {
      opacity: 0;
    }

    &__background-blob-1 {
      position: absolute;
      width: 110px;
      height: 110px;
      background-color: #022e87;
      top: -10px;
      left: -30px;
      border-radius: 55% 80% 65% 89% / 80% 65% 90% 70%;
      animation: floatEndlessley 5s alternate infinite ease-in-out;
      overflow: hidden;
    }

    &__background-blob-2 {
      position: absolute;
      width: 110px;
      height: 110px;
      background-color: #022e87;
      bottom: 0px;
      right: -10px;
      border-radius: 55% 80% 65% 89% / 80% 65% 90% 70%;
      animation: floatEndlessley 5s alternate infinite ease-in-out;
      overflow: hidden;
    }

    &__main-blob {
      position: absolute;
      width: 170px;
      height: 170px;
      top: 0;
      left: 0;
      inset: 0;
      background: black;
      background-attachment: fixed;
      border-radius: 55% 80% 65% 89% / 80% 65% 90% 70%;
      animation: rotateAnimation 30s infinite ease-in-out;
      overflow: hidden;
      align-content: center;
      justify-content: center;

      &::before {
        content: ' ';
        background-image: url('../assets/photo.jpg');
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
        background-repeat: no-repeat;
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        animation: counterRotateAnimation 30s infinite ease-in-out;
      }
    }
  }


  @keyframes rotateAnimation {
    0% {
      transform: rotate(0deg);
    }
    50% {
      transform: rotate(180deg);
    }
    100% {
      transform:  rotate(360deg);
    }
  }

  @keyframes counterRotateAnimation {
    0% {
      transform: rotate(360deg) scale(1.4);
    }
    50% {
      transform: rotate(180deg) scale(1.4);
    }
    100% {
      transform: rotate(0deg) scale(1.4);
    }
  }

  @keyframes floatIn {
    0% {
      transform: translateY(2vh);
    }
    100% {
      transform: translateY(-2vh);
    }
  }

  @keyframes floatEndlessley {
    0% {
      transform: translateY(0px) rotate(0deg);
    }
    100% {
      transform: translateY(-30px) rotate(40deg);
    }
  }
</style>